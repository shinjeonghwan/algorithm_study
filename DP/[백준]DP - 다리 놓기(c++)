#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

int DP[30][30];

int solution(int M, int N) {
	if (DP[M][N] != 0) {
		return DP[M][N];
	}

	if (N == 0 || M == N) {
		DP[M][N] = 1;
		return DP[M][N];
	}
	else {
		DP[M][N] = solution(M - 1, N - 1) + solution(M - 1, N);
		return DP[M][N];
	}
}

int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);

	int T;
	int N, M;

	cin >> T;

	for (int i = 0; i < T; i++) {
		cin >> N >> M;
		cout << solution(M, N) << '\n';
	}

	return 0;
}
