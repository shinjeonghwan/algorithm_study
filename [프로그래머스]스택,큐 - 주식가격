def solution(prices):
    answer = []
    prices_len = len(prices)
    for i in range(prices_len):
        cnt = 0
        for j in range(i+1, len(prices)):
            cnt += 1
            if len(prices) == 1:
                break
            if prices[i] <= prices[j]:
                pass
            else:
                break
        answer += [cnt]    
    return answer
